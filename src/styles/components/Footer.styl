/*Footer-----Footer*/

.Footer {
  width: 100%;
  height: 150px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: var(--footer-color);
}
.Footer__navbar {
  width: 60%;
  ul {
    display: flex;
    justify-content: space-between;
    li:nth-of-type(1) {
      width: 111px;
      font-family: var(--main-font);
      font-size: 10px;
      color: var(--HF-text-color);
    }
    a {
      margin-bottom: 10px;
      display: block;
      font-family: var(--secundary-font);
      font-size: 10px;
      font-weight: 600;
      color: var(--HF-text-color);
      text-decoration: none;
    }
  }
}
.Footer__contact {
  div {
    margin-bottom: 10px;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    font-family: var(--main-font);
    font-size: 12px;
    color: var(--HF-text-color);
    p {
      margin-right: 10px;
    }
    a {
      margin-left: 10px;
      display: flex;
      justify-content: space-evenly;
    }
    img {
      background-color: #fff;
      border-radius: 50%;
      opacity: .5;
    }
  }
  form {
    display: flex;
    align-items: center;
    input {
      height: 30px;
      padding: 10px;
      box-sizing: border-box;
      border: none;
      outline: none;
    }
    button {
      width: 100px;
      height: 30px;
      padding: 5px;
      font-family: var(--secundary-font);
      color: var(--white-color);
      background-color: var(--detail-color);
      border: none;
      outline: none;
      cursor: pointer;
    }
    button:active {
      transform: scale(.99);
    }
  }
}